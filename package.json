{
  "name": "@xpeer/client",
  "version": "0.0.0",
  "description": "xpeer js client",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fabiankachlock/xpeer-client"
  },
  "license": "MIT",
  "author": {
    "name": "Fabian Kachlock",
    "email": "contact@fabiankachlock.dev",
    "url": "https://github.com/fabiankachlock"
  },
  "engines": {
    "node": ">=14.0",
    "yarn": "^1 <2"
  },
  "main": "./dist/src/index.js",
  "files": [
    "dist/src/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rm -rf ./dist/",
    "lint": "eslint ./src/ --fix",
    "lint:ci": "eslint ./src/ --no-fix --max-warnings 50",
    "format": "prettier --write \"./src/**/*.{ts,js,json,d.ts}\"",
    "format:ci": "prettier --check \"./src/**/*.{ts,js,json,d.ts}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prepare": "husky install",
    "preversion": "yarn ci && yarn clean && yarn build && yarn test",
    "postversion": "git push --tags && git push && npm publish",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "p2p"
  ],
  "bugs": {
    "url": "https://github.com/fabiankachlock/xpeer-client/issues"
  },
  "homepage": "https://github.com/fabiankachlock/xpeer-client#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.2.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "yarn format"
    ]
  }
}
