{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "lib": ["es6", "DOM"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["nanoid"]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
